{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 22,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CONFIGURATION_TYPES": "Release;Debug;Coverage;RelWithChecks",
                "CMAKE_CXX_SCAN_FOR_MODULES": "Off"
            },
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/build/${presetName}/install"
        },
        {
            "name": "clang_base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_CXX_FLAGS": "-Wall -Werror -pedantic-errors -Wextra -Wconversion",
                "CMAKE_CXX_FLAGS_DEBUG": "-Og -g -DOASYS_CORE_ENABLE_CHECKS",
                "CMAKE_CXX_FLAGS_RELEASE": "-O3 ",
                "CMAKE_CXX_FLAGS_RELWITHCHECKS": "-O3 -g -DOASYS_CORE_ENABLE_CHECKS",
                "CMAKE_CXX_FLAGS_COVERAGE": "-Og -g -fcoverage-mcdc -fprofile-instr-generate -fcoverage-mapping -DOASYS_CORE_ENABLE_CHECKS"
            }
        },
        {
            "name": "gcc_base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_CXX_FLAGS": "-Wall -Werror -pedantic-errors -Wextra -Wconversion",
                "CMAKE_CXX_FLAGS_DEBUG": "-Og -g -DOASYS_CORE_ENABLE_CHECKS",
                "CMAKE_CXX_FLAGS_RELEASE": "-O3 -flto=auto",
                "CMAKE_CXX_FLAGS_RELWITHCHECKS": "-O3 -flto=auto -g -DOASYS_CORE_ENABLE_CHECKS",
                "CMAKE_CXX_FLAGS_COVERAGE": "-Og -g -fprofile-arcs -ftest-coverage -DOASYS_CORE_ENABLE_CHECKS"
            }
        },
        {
            "name": "linux_base",
            "hidden": true,
            "inherits": [
                "base",
                "ninja"
            ],
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "linux_clang",
            "hidden": false,
            "inherits": [
                "base",
                "ninja",
                "linux_base",
                "clang_base"
            ],
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-linux-clang",
                "VCPKG_HOST_TRIPLET": "x64-linux-clang"
            },
            "displayName": "Clang"
        },
        {
            "name": "linux_gcc",
            "hidden": false,
            "inherits": [
                "base",
                "ninja",
                "linux_base",
                "gcc_base"
            ],
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-linux-gcc",
                "VCPKG_HOST_TRIPLET": "x64-linux-gcc"
            },
            "displayName": "Gcc"
        },
        {
            "name": "ninja",
            "hidden": true,
            "generator": "Ninja Multi-Config"
        },
        {
            "name": "win_clang",
            "hidden": false,
            "inherits": [
                "base",
                "ninja",
                "windows_base",
                "clang_base"
            ],
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-msys-static-clang",
                "VCPKG_HOST_TRIPLET": "x64-msys-static-clang",
                "BUILD_SHARED_LIBS": "OFF",
                "CMAKE_CXX_FLAGS_RELEASE": "-O3",
                "CMAKE_CXX_FLAGS_RELWITHCHECKS": "-O3 -g -DOASYS_CORE_ENABLE_CHECKS"
            },
            "displayName": "Clang"
        },
        {
            "name": "win_gcc",
            "hidden": false,
            "inherits": [
                "base",
                "ninja",
                "windows_base",
                "gcc_base"
            ],
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-msys-static-gcc",
                "VCPKG_HOST_TRIPLET": "x64-msys-static-gcc",
                "BUILD_SHARED_LIBS": "OFF",
                "CMAKE_CXX_FLAGS_COVERAGE": "-Og -g -fprofile-arcs -ftest-coverage -DOASYS_CORE_ENABLE_CHECKS"
            },
            "displayName": "Gcc"
        },
        {
            "name": "win_msbuild",
            "binaryDir": "${sourceDir}/build/win_msbuild",
            "installDir": "${sourceDir}/build/win_msbuild/install",
            "hidden": false,
            "inherits": [
                "windows_base"
            ],
            "generator": "Visual Studio 17 2022",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "/W4 /WX /wd4275 /wd4251 /bigobj",
                "CMAKE_CXX_FLAGS_DEBUG": "/EHsc /Zi /Od  /DOASYS_CORE_ENABLE_CHECKS",
                "CMAKE_CXX_FLAGS_RELEASE": "/EHsc /O2",
                "CMAKE_CXX_FLAGS_RELWITHCHECKS": "/EHsc /O2 /Zi /DOASYS_CORE_ENABLE_CHECKS",
                "CMAKE_CXX_FLAGS_COVERAGE": "/EHsc /O0 /PROFILE  /DOASYS_CORE_ENABLE_CHECKS",
                "CMAKE_MAP_IMPORTED_CONFIG_RELWITHCHECKS": "Release",
                "CMAKE_MAP_IMPORTED_CONFIG_COVERAGE": "Release",
                "VCPKG_TARGET_TRIPLET": "x64-msvc-static",
                "VCPKG_HOST_TRIPLET": "x64-msvc-static",
                "BUILD_SHARED_LIBS": "ON"
            },
            "displayName": "Msbuild"
        },
        {
            "name": "win_msvc",
            "binaryDir": "${sourceDir}/build/win_msvc",
            "installDir": "${sourceDir}/build/win_msvc/install",
            "hidden": false,
            "inherits": [
                "windows_base"
            ],
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "/W4 /WX /wd4275 /wd4251 /bigobj",
                "CMAKE_CXX_FLAGS_DEBUG": "/EHsc /Zi /Od  /DOASYS_CORE_ENABLE_CHECKS",
                "CMAKE_CXX_FLAGS_RELEASE": "/EHsc /O2",
                "CMAKE_CXX_FLAGS_RELWITHCHECKS": "/EHsc /O2 /Zi /DOASYS_CORE_ENABLE_CHECKS",
                "CMAKE_CXX_FLAGS_COVERAGE": "/EHsc /O0 /PROFILE  /DOASYS_CORE_ENABLE_CHECKS",
                "CMAKE_MAP_IMPORTED_CONFIG_RELWITHCHECKS": "Release",
                "CMAKE_MAP_IMPORTED_CONFIG_COVERAGE": "Release",
                "VCPKG_TARGET_TRIPLET": "x64-msvc-static",
                "VCPKG_HOST_TRIPLET": "x64-msvc-static",
                "BUILD_SHARED_LIBS": "ON",
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            },
            "displayName": "Msvc"
        },
        {
            "name": "windows_base",
            "hidden": true,
            "inherits": [
                "base"
            ],
            "condition": {
                "type": "matches",
                "string": "${hostSystemName}",
                "regex": "Windows|CYGWIN.*|MSYS.*"
            }
        }
    ],
